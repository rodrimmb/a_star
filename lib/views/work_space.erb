<script type="text/javascript" src="/js/AddNodeModal.js"></script>
<script type="text/javascript" src="/js/drawTree.js"></script>
<script type="text/javascript" src="/js/tables.js"></script>

<!--  The Raphael JavaScript library for vector graphics display  -->
<script type="text/javascript" src="/dracula/raphael-min.js"></script>
<!--  Dracula  -->
<!--  An extension of Raphael for connecting shapes -->
<script type="text/javascript" src="/dracula/dracula_graffle.js"></script>
<!--  Graphs  -->
<script type="text/javascript" src="/dracula/dracula_graph.js"></script>
<script type="text/javascript" src="/dracula/dracula_algorithms.js"></script>

<div id="content">
    <!-- tabs with tables -->
    <div id="left-content">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
            <li><a href="/" class="glyphicon glyphicon-home"></a></li>
            <li class="active"><a href="#tab-table-input" data-toggle="tab">Nodes Input</a></li>
            <li><a href="#tab-table-solution" data-toggle="tab">Solution</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <!-- Tab to add nodes -->
            <div class="tab-pane fade active in" id="tab-table-input">
                <div class="buttons">
                    <button type="button" class="btn btn-default" onclick="showModalAddNode()">
                        <span class="glyphicon glyphicon-plus-sign"></span> Add new node
                    </button>

                    <button type="button" class="btn btn-default" onclick="refreshTableNodes()">
                        <span class="glyphicon glyphicon-refresh"></span> Refresh
                    </button>
                </div>
                <!-- Table with nodes -->
                <table id="table-nodes" class="table table-striped table-condensed">
                    <thead>
                        <td>#</td>
                        <td>Node</td>
                        <td>Children</td>
                        <td>Parent</td>
                        <td>Goal</td>
                    </thead>
                    <tbody id="table-nodes-content">
                        
                    </tbody>
                </table>
            </div>

            <!-- Tab to show solution -->
            <div class="tab-pane fade" id="tab-table-solution">
                <div class="buttons">
                    <button type="button" class="btn btn-default" onclick="showSolution()">
                        Solve
                    </button>

                    <button type="button" class="btn btn-default" onclick="showStepByStep()">
                        Next Step <span class="glyphicon glyphicon-chevron-right"></span>
                    </button>
                </div>
                <div id ="solution">
                    <p>Solution:</p>
                    <p id="path-solution" style="vertical-align: middle;">
                        
                    </p>
                </div>
                <table class="table table-striped">
                    <thead>
                        <td>#</td>
                        <td>Open</td>
                        <td>Successors</td>
                        <td>Closed</td>
                    </thead>
                    <tbody id="table-nodes-solution">
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Tree with the information -->
    <div id="right-content">
        <div id="canvas">
            
        </div>
        <button type="button" class="btn btn-default" onclick="redraw()" style="float: right; margin-right:15px;">
            <span class="glyphicon glyphicon-refresh"></span> Redraw
        </button>
    </div>
</div>

<div id="add-popup" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h3>Add new node</h3>
            </div>

            <div class="modal-body">
                
                <div id="form-name" class="form-group">
                    <label class="control-label">Name</label>
                    <input type="text" name="name" class="form-control" id="nodeName" placeholder="Enter node name">
                </div>

                <div id="form-cost" class="form-group">
                    <label class="control-label">Cost</label>
                    <input type="number" class="form-control" id="nodeCost" placeholder="Enter the cost of node">
                </div>

                <div class="form-group">
                    <label class="control-label">Parent</label>
                    <input type="text" class="form-control" id="nodeParent" placeholder="Enter nodes parent separated by commas">
                </div>

                <div class="form-group">
                    <label>Children</label>
                    <p id="children">Empty</p>
                    <div class="row">
                        <div class="col-xs-4">
                            <input type="text" class="form-control" id="nodeChild" placeholder="Node children">
                        </div>

                        <div class="col-xs-4">
                            <input type="number" class="form-control" id="costNodeChild" placeholder="Cost of path">
                        </div>
                        <button class="btn btn-default glyphicon glyphicon-plus" onclick="addNodeChildren()"></button>
                    </div>
                </div>

                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="nodeGoal"> Is goal?
                    </label>
                </div>

            </div>

            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                <button class="btn btn-primary" onclick="addNode()">Save changes</button>
            </div>

        </div>
    </div>
</div>