<script type="text/javascript" src="/js/index.js"></script>

<div class="container theme-showcase" role="main" style="margin-top: 10px;">

	<div class="jumbotron">
	    <h1>Visual Search</h1>
		<p>In this web site you can see how work the algorithm A star</p>
	</div>



	<a href="/example">Example table</a>
	<br>
	<button type="button" class="btn btn-primary" onclick="showModalAddSearch()" data-toggle="button" style="margin: 10px;">
		<span class="glyphicon glyphicon-plus-sign"></span>
		Add search
	</button>

	<button type="button" class="btn btn-primary" onclick="refreshSearches()" data-toggle="button" style="margin: 10px;">
		<span class="glyphicon glyphicon-refresh"></span>
		Refresh
	</button>
	<table id="index-table" class="table table-striped table-bordered table-hover">
		<thead>
			<tr><th>Name</th></tr> 
		</thead>
		<tbody id="name-searches" data-link="row" class="rowlink">
		</tbody>
	</table>

</div>

<div id="add-search" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
        		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        		<h4 class="modal-title">Add new search</h4>
      		</div>
      		<div class="modal-body">
        		<div class="form-group">
            		<label>Name</label>
            		<input type="text" class="form-control" id="searchName" placeholder="Enter the name of search">
        		</div>
      		</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="button" onclick="addSearch()" class="btn btn-primary">Save changes</button>
			</div>
    	</div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->